{
  "$schema": "https://biomejs.dev/schemas/1.6.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentWidth": 4,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConstEnum": "off"
      },
      "correctness": {
        "noUnusedImports": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  }
}
